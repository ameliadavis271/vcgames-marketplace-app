<h1 class="title"> Chatting with <%= @conversation.with(current_user).profile.fullname %> </h1>
<hr>

<div id="conversation-main">
  <div id="conversation-body">
    <%= render @conversation.personal_messages.limit(10) %>
  </div>

  <%= form_for @personal_message do |f| %>
    <%= hidden_field_tag 'conversation_id', @conversation.id %>
    <%= f.label :body %>
    <%= f.text_area :body %>

    <%= f.submit %>
  <% end %>
</div>