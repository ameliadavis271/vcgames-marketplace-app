<!DOCTYPE html>
<html>
  <head>
    <title>VC-Games</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <p class="alert"><%= alert %></p>
    <div class="site-wrapper">
      <nav>
      
        <% if user_signed_in? %>
            <%= link_to "New Listing", new_listing_path, class: "listing-button" %>
            <%= link_to "Sign Out", destroy_user_session_path, class: "listing-button", method: :delete %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: "listing-button" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "listing-button" %>
        <% end %>
      </nav>
      <div class=container>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
